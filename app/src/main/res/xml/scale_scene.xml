<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        android:id="@+id/transition_main"
        motion:constraintSetStart="@id/start"
        />
    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@id/iv_thumbnail">
            <Layout
                android:layout_marginTop="30dp"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintHeight_default="percent"
                motion:layout_constraintHeight_percent="0.5"
                motion:layout_constraintDimensionRatio="10:15"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/mid">
        <Constraint android:id="@id/iv_thumbnail">
            <Layout
                android:layout_marginTop="60dp"
                motion:layout_constraintHeight_default="percent"
                motion:layout_constraintHeight_percent="0.5"
                motion:layout_constraintDimensionRatio="10:15"
                motion:layout_constraintStart_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </Constraint>
    </ConstraintSet>



    <ConstraintSet android:id="@+id/end_set">
        <Constraint android:id="@id/spacer" >
            <Layout
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </Constraint>
        <Constraint android:id="@id/iv_thumbnail">
            <Layout
                android:layout_marginTop="30dp"
                motion:layout_constraintTop_toBottomOf="@id/spacer"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHeight_default="percent"
                motion:layout_constraintHeight_percent="0.5"
                motion:layout_constraintDimensionRatio="10:15"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/start_set">
        <Constraint android:id="@id/spacer" >
            <Layout
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </Constraint>
        <Constraint android:id="@id/iv_thumbnail">
            <Layout
                android:layout_marginTop="30dp"
                motion:layout_constraintTop_toBottomOf="@id/spacer"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintHeight_default="percent"
                motion:layout_constraintHeight_percent="0.5"
                motion:layout_constraintDimensionRatio="10:15"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </Constraint>
    </ConstraintSet>


    <ConstraintSet android:id="@+id/mid_end_set">
        <Constraint android:id="@id/spacer" >
            <Layout
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </Constraint>
        <Constraint android:id="@id/iv_thumbnail">
            <Layout
                android:layout_marginTop="30dp"
                motion:layout_constraintTop_toBottomOf="@id/spacer"
                motion:layout_constraintWidth_default="percent"
                motion:layout_constraintWidth_percent="0.5"
                motion:layout_constraintDimensionRatio="10:15"
                motion:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/mid_set">
        <Constraint android:id="@id/spacer" >
            <Layout
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </Constraint>
        <Constraint android:id="@id/iv_thumbnail">
            <Layout
                android:layout_marginTop="30dp"
                motion:layout_constraintTop_toBottomOf="@id/spacer"
                motion:layout_constraintWidth_default="percent"
                motion:layout_constraintWidth_percent="0.5"
                motion:layout_constraintDimensionRatio="10:15"
                motion:layout_constraintStart_toStartOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end">
        <Constraint android:id="@id/spacer" >
            <Layout
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </Constraint>
        <Constraint android:id="@id/iv_thumbnail">
            <Layout
                motion:layout_constraintDimensionRatio="10:15"
                motion:layout_constraintTop_toBottomOf="@id/spacer"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </Constraint>
    </ConstraintSet>

</MotionScene>